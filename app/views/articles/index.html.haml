.row
	.col-lg-12
		%h1 Articles
		%br
		%br

- @articles.each do |article|
	.row
		.cols-lg-12
			%a{ href: article_path(article) }
				%h3= article.title

	.row
		.cols-lg-12.text-center
			= image_tag article.cover.url

	.row
		.cols-lg-12
			= article.short_content


.row
	.col-lg-12
		= paginate @articles