<div class="row">
		<div class="col-lg-8">
			Content
		</div>
		<div class="col-lg-4">
		<ul class="nav nav-tabs" role="tablist">
		    <li role="presentation" class="active">
		    	<a href="#registration" aria-controls="registration" role="tab" data-toggle="tab">Registration</a>
	    	</li>

		    <li role="presentation">
		    	<a href="#login" aria-controls="login" role="tab" data-toggle="tab">Login</a>
	    	</li>
		  </ul>

		  <!-- Tab panes -->
		  <div class="tab-content">
		    <div role="tabpanel" class="tab-pane active" id="registration">
		    	<%= bootstrap_form_for @initial_registration_form, remote: true, url: initial_registration_path, html: {id: 'initial_registration'} do |f| %>
						<%= f.email_field :email %>
						<%= f.text_field :name %>
						
						<%= f.select :age, options_for_select((18..80).step(1).to_a.map{|age| ["#{age}", age]}), {include_blank: 'age'} %>
						<p>gender:</p>
						<%= f.radio_button :gender, User::MALE %> male
						<%= f.radio_button :gender, User::FEMALE %> female
						<br>
						<p>seek:</p>
						<%= f.radio_button :seek_gender, User::MALE %> male
						<%= f.radio_button :seek_gender, User::FEMALE %> female

						<%= f.submit 'Register' %>
					<% end %>
		    </div>

		    <div role="tabpanel" class="tab-pane" id="login">
		    	<%= bootstrap_form_tag url: login_url, remote: true, html: { id: 'login' } do |f| %>
		    		<%= f.email_field :email %>
		    		<%= f.password_field :password %>

		    		<%= f.submit 'Log in' %>
		    	<% end %>
		    </div>
		  </div>

			
		</div>
</div>

<script type="text/javascript">
	$(function() {
		var initial_registration = new InitialRegistration('<%= final_step_registration_url %>');
		var auth_controller = new AuthController('<%= profile_url %>');
	});
</script>