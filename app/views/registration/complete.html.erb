<div class="row">
  <div class="col-lg-12 center-text">
    <h2>Complete registration</h2>
  </div>
</div>

<%= simple_form_for @user, url: update_account_registration_path, html: { multipart: true } do |f| %>
  <div class="row">
    <div class="col-lg-12">
      <%= image_tag(@user.avatar.url) if @user.avatar %>
    	<%= f.file_field :avatar %>
      <%= f.hidden_field :avatar_cache %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= f.fields_for :profile do |p| %>
        <%= p.association :mood %>
        <%= p.association :zodiak %>

        <%= p.input :interesting %>
        <%= p.input :about %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <%= f.fields_for :questionary do |q| %>
        <%= q.association :region %>
        <%= q.association :city %>

        <%= q.input :age, as: :select, collection: Questionary::age_options %>
        <%= q.input :height %>
        <%= q.input :weight %>
      <% end %>
      
    </div>
  </div>

  <%= f.submit %>
<% end %>